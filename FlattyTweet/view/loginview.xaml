<Window x:Class="FlattyTweet.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:FlattyTweet.View"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded" WindowStyle="None" AllowsTransparency="true" ShowInTaskbar="false"
        WindowStartupLocation="CenterOwner" Background="Transparent" Title="Signing in"
        SizeToContent="WidthAndHeight">
  <Grid x:Name="LayoutRoot" Margin="26">
    <StackPanel Margin="20,20,20,20">
      <UserControl Style="{DynamicResource Throbber}" Content="Signing in to Twitter..." FontSize="16" Width="300"/>
    </StackPanel>
  </Grid>
</Window>