<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Throbber" TargetType="{x:Type UserControl}">
        <Setter Property="Foreground" Value="{DynamicResource ModernTextLighterBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type UserControl}">
                    <StackPanel>
                        <ProgressBar IsIndeterminate="True" Height="3" />
                        <ContentPresenter HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>