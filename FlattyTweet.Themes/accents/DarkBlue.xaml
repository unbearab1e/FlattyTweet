<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--New color scheme-->
    <Color x:Key="ModernColorFeature">#FF007ACC</Color>
    <Color x:Key="ModernColorFeatureContrast">#FFEEEEEE</Color>
    <SolidColorBrush x:Key="ModernFeatureBrush" Color="{StaticResource ModernColorFeature}" />
    <SolidColorBrush x:Key="ModernContrastBrush" Color="{StaticResource ModernColorFeatureContrast}" />

</ResourceDictionary>