<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MetroColorFeature">#FF8ebc00</Color>
    <Color x:Key="MetroColorFeatureFade">#FFa0b955</Color>
    <Color x:Key="MetroColorFeatureContrast">#FFFFFFFF</Color>

    <!--New color scheme-->
    <Color x:Key="ModernColorFeature">#FF8ebc00</Color>
    <Color x:Key="ModernColorFeatureContrast">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="ModernFeatureBrush" Color="{StaticResource ModernColorFeature}" />
    <SolidColorBrush x:Key="ModernContrastBrush" Color="{StaticResource ModernColorFeatureContrast}" />

</ResourceDictionary>